{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-useless-constructor": "off",
        "prettier/prettier": "error",
        "no-param-reassign": "off",
        "camelcase": "off",
        "argsIgnorePattern": "_",
        "no-unused-vars": [ "error", { "argsIgnorePattern": "next" } ]
    }
}
